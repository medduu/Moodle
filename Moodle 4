1.
luku = 1

while luku <= 1000:
    if luku % 3 == 0:
        print(luku)
    luku += 1

2. 
while True:
    inches = float(input("Enter length in inches (negative value to quit): "))
    if inches < 0:
        print("Program ended.")
        break
    cm = inches * 2.54
    print(f"{inches:.1f} inches is {cm:.2f} centimeters")

3. 
numbers = []

while True:
    student_answer = input("Enter a number (or press Enter to quit): ")
    if student_answer == "":
        break
    try:
        number = float(student_answer)
        numbers.append(number)
    except ValueError:
        print("Invalid input, please enter a number.")

if numbers:
    print(f"Smallest number: {min(numbers):.1f}")
    print(f"Largest number: {max(numbers):.1f}")
else:
    print("No numbers were entered.")

4.
import random

salaisuus = random.randint(1, 10)  # arvotaan vain kerran

while True:
    try:
        arvaus = int(input("Guess a number (1-10): "))
    except ValueError:
        print("Syötä kokonaisluku.")
        continue

    if arvaus > salaisuus:
        print("Too high")
    elif arvaus < salaisuus:
        print("Too low")
    else:
        print("Correct")
        break

5.
import random

oikea_kayttaja = "python"
oikea_salasana = "rules"

yritykset = 0
max_yritykset = 4

while yritykset < max_yritykset:
    username = input("Enter username: ")
    password = input("Enter password: ")

    if username == oikea_kayttaja and password == oikea_salasana:
        print("Welcome")
        break
    else:
        print("Incorrect username or password. Please try again.")
        yritykset += 1

if yritykset == max_yritykset:
    print("Enter username: " + "Enter password: " + "Access denied")

6. import random

N = int(input("Enter the number of random points: "))

n = 0
count = 0

while count < N:
    x = random.uniform(-1, 1)
    y = random.uniform(-1, 1)

    if x ** 2 + y ** 2 <= 1:
        n += 1

    count += 1

pi_approx = 4 * n / N

print("Approximation of pi:", pi_approx)
